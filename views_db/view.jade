doctype html 
html 
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/topic') Server Side JavaScript
        ul 
            each topic in topics 
              li
                a(href='/topic/'+topic.id)= topic.title
        article
            if details
                each detail in details 
                    h2= detail.title
                    =detail.description 
            else
                h2 welcome
                | This is server side javascript tutorial
        ul
            li
                a(href='/topic/create') create
            if details
                each detail in details
                    li
                        a(href='/topic/update/' + detail.id) update
                    li
                        a(href='/topic/delete/' + detail.id) delete
